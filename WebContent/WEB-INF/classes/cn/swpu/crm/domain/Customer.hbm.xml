<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="cn.swpu.crm.domain.Customer" table="cst_customer">
		<id name="cust_id" column="cust_id">   <!-- ????????? -->
			<generator class="native"/>
		</id>
		
		<property name="cust_name" column="cust_name"/>
		<property name="cust_phone" column="cust_phone"/>
		<property name="cust_mobile" column="cust_mobile"/>
		<property name="cust_image" column="cust_image"/>
		
		<!-- 多对一的映射 -->
		<many-to-one name="baseDictSource" class="cn.swpu.crm.domain.BaseDict" column="cust_source"></many-to-one>
		<many-to-one name="baseDictIndustry" class="cn.swpu.crm.domain.BaseDict" column="cust_industry"></many-to-one>
		<many-to-one name="baseDictLevel" class="cn.swpu.crm.domain.BaseDict" column="cust_level"></many-to-one>
		
		<set name="linkMans" cascade="delete" inverse="true">
			<key column="lkm_cust_id"/>
			<one-to-many class="cn.swpu.crm.domain.LinkMan"/>
		</set>
	</class>
</hibernate-mapping>
